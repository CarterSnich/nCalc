<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/display_view_wrapper"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
    >
        <HorizontalScrollView
            android:id="@+id/entry_scroll_container"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginHorizontal="10dp"
            android:scrollbars="none"
            android:requiresFadingEdge="horizontal"
            android:fadingEdgeLength="10dp"
        >
            <TextView
                android:id="@+id/entry_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:gravity="right"
                android:fontFamily="@font/poppins_regular"
                android:textSize="56sp"
                android:text="0"
                android:scrollHorizontally="true"
            />
        </HorizontalScrollView>
        <HorizontalScrollView
            android:id="@+id/preview_scroll_container"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="10dp"
            android:scrollbars="none"
            android:requiresFadingEdge="horizontal"
            android:fadingEdgeLength="10dp"
            >
            <TextView
                android:id="@+id/preview_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:textSize="36sp"
                android:layout_gravity="right|bottom"
            />
        </HorizontalScrollView>
    </LinearLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:columnCount="4"
        android:rowCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/display_view_wrapper"
        android:layout_marginBottom="20dp"
        android:background="@drawable/numpad_background"
    >

        <!-- ROW 0 -->
        <Button
            android:id="@+id/clearButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:fontFamily="@font/poppins"
            android:text="C"
            android:textSize="36sp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/negateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:fontFamily="@font/poppins"
            android:text="±"
            android:textSize="36sp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/backspaceButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"

            android:layout_gravity="fill"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:fontFamily="sans-serif"
            android:foreground="@drawable/ic_outline_backspace_24"
            android:foregroundGravity="center"
            android:textSize="36sp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/divideButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:fontFamily="@font/poppins"
            android:text="÷"
            android:textSize="36sp"
            android:typeface="monospace" />

        <!-- ROW 1 -->
        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:fontFamily="@font/poppins"
            android:text="7"
            android:textSize="36sp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:fontFamily="@font/poppins"
            android:text="8"
            android:textSize="36sp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:fontFamily="@font/poppins"
            android:text="9"
            android:textSize="36sp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/multiButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:fontFamily="@font/poppins"
            android:text="×"
            android:textSize="36sp"
            android:typeface="monospace" />

        <!-- ROW 2 -->
        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:fontFamily="@font/poppins"
            android:text="4"
            android:textSize="36sp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:fontFamily="@font/poppins"
            android:text="5"
            android:textSize="36sp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:fontFamily="@font/poppins"
            android:text="6"
            android:textSize="36sp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/subtractButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:fontFamily="@font/poppins"
            android:text="−"
            android:textSize="36sp"
            android:typeface="monospace" />

        <!-- ROW 3 -->
        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:fontFamily="@font/poppins"
            android:text="1"
            android:textSize="36sp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:fontFamily="@font/poppins"
            android:text="2"
            android:textSize="36sp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:fontFamily="@font/poppins"
            android:text="3"
            android:textSize="36sp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/addButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:fontFamily="@font/poppins"
            android:text="+"
            android:textSize="36sp"
            android:typeface="monospace" />

        <!-- ROW 4 -->
        <Button
            android:id="@+id/button00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:fontFamily="@font/poppins"
            android:text="00"
            android:textSize="36sp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:fontFamily="@font/poppins"
            android:text="0"
            android:textSize="36sp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/decimalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:fontFamily="@font/poppins"
            android:text="."
            android:textSize="36sp"
            android:typeface="monospace" />

        <Button
            android:id="@+id/equalsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:fontFamily="@font/poppins"
            android:text="="
            android:textSize="36sp"
            android:typeface="monospace" />
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>