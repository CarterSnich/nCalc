<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/DarkTheme"
        android:background="@color/bgColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:id="@+id/display_view_wrapper"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    >
        <TextView
                android:id="@+id/entry_textview"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="bottom|end"
                android:textSize="56sp"
                android:typeface="monospace"
        />
        <TextView
                android:id="@+id/preview_textview"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="bottom|end"
                android:textSize="36sp"
                android:typeface="monospace"
        />
    </LinearLayout>
    <GridLayout
            android:id="@+id/numPadWrapper"
            android:layout_width="409dp"
            android:layout_height="0dp"
            android:columnCount="4"
            android:rowCount="5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/display_view_wrapper"
            android:layout_marginBottom="20dp"
    >

        <!-- ROW 0 -->
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="C"
                android:textSize="36sp" android:typeface="monospace"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="%"
                android:textSize="36sp" android:typeface="monospace"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:foreground="@drawable/ic_outline_backspace_24" android:foregroundGravity="center"
                android:textSize="36sp" android:typeface="monospace"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="÷"
                android:textSize="36sp" android:typeface="monospace"/>

        <!-- ROW 1 -->
        <Button
                android:id="@+id/button7"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:text="7"
                android:textSize="36sp"
                android:typeface="monospace"
            />
        <Button
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="8"
                android:textSize="36sp" android:typeface="monospace" android:id="@+id/button8"/>
        <Button
                android:layout_row="1"
                android:layout_column="2"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="9"
                android:textSize="36sp" android:typeface="monospace" android:id="@+id/button9"/>
        <Button
                android:layout_row="1"
                android:layout_column="3"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="×"
                android:textSize="36sp" android:typeface="monospace"/>

        <!-- ROW 2 -->
        <Button
                android:layout_row="2"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="4"
                android:textSize="36sp" android:typeface="monospace" android:id="@+id/button4"/>
        <Button
                android:layout_row="2"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="5"
                android:textSize="36sp" android:typeface="monospace" android:id="@+id/button5"/>
        <Button
                android:layout_row="2"
                android:layout_column="2"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:text="6"
                android:textSize="36sp" android:typeface="monospace" android:id="@+id/button6"/>
        <Button
                android:layout_row="2"
                android:layout_column="3"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="−"
                android:textSize="36sp" android:typeface="monospace"/>

        <!-- ROW 3 -->
        <Button
                android:layout_row="3"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="1"
                android:textSize="36sp" android:typeface="monospace" android:id="@+id/button1"/>
        <Button
                android:layout_row="3"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="2"
                android:textSize="36sp" android:typeface="monospace" android:id="@+id/button2"/>
        <Button
                android:layout_row="3"
                android:layout_column="2"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="3"
                android:textSize="36sp" android:typeface="monospace" android:id="@+id/button3"/>
        <Button
                android:layout_row="3"
                android:layout_column="3"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="+"
                android:textSize="36sp" android:typeface="monospace"/>

        <!-- ROW 4 -->
        <Button
                android:layout_row="4"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="00"
                android:textSize="36sp" android:typeface="monospace"/>
        <Button
                android:layout_row="4"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="0"
                android:textSize="36sp" android:typeface="monospace" android:id="@+id/button0"/>
        <Button
                android:layout_row="4"
                android:layout_column="2"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="."
                android:textSize="36sp" android:typeface="monospace"/>
        <Button
                android:layout_row="4"
                android:layout_column="3"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="="
                android:textSize="36sp" android:typeface="monospace"/>
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>